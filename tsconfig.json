{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "experimentalDecorators": true,
    "removeComments": false,
    "noEmitOnError": true,
    "sourceMap": true,
    "typeRoots" : ["./node_modules/@types"],
    "lib": ["es2017", "DOM", "ScriptHost"],
    "allowJs": false
  },
  "include": [
    "src/**/*.ts",
    "demo/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
